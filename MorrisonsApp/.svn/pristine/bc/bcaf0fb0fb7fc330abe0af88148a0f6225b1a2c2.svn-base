<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundyellow" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/morrisons_logo" />

    <LinearLayout
        android:id="@+id/linearLayoutCheckoutItems"
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundbutton2"
        android:orientation="vertical" >
    </LinearLayout>
    
<ScrollView 
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
     android:layout_alignBottom="@+id/linearLayoutCheckoutItems"
        android:layout_alignLeft="@+id/linearLayoutCheckoutItems"
        android:layout_alignRight="@+id/linearLayoutCheckoutItems"
        android:layout_alignTop="@+id/linearLayoutCheckoutItems" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
                    android:paddingTop="3dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/blueberries" />

        <ImageView
            android:id="@+id/ImageView03"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
                    android:paddingTop="3dp"
            android:src="@drawable/banana" />

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/ImageView03"
            android:layout_below="@+id/textView1"
            android:paddingTop="5dp"
            android:src="@drawable/orange" />

        <ImageView
            android:id="@+id/ImageView07"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView02"
            android:paddingTop="5dp"
            android:src="@drawable/strawberry" />

        <ImageView
            android:id="@+id/ImageView08"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
                    android:paddingTop="3dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/apple" />

        <ImageView
            android:id="@+id/ImageView04"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView01"
            android:paddingTop="5dp"
            android:src="@drawable/melon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageView03"
            android:layout_centerHorizontal="true"
            android:text="Bananas"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ImageView02"
            android:layout_alignParentLeft="true"
            android:text="Apples"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView02"
            android:text="Blueberries"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ImageView04"
            android:text="Melon"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ImageView07"
            android:text="Strawberries"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Orange"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

    </ScrollView>

     <LinearLayout
        android:id="@+id/linearLayoutTab"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        
          <Button
        android:id="@+id/buttonList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Shopping&#10;List" />

          <Button
              android:id="@+id/buttonItems"
              android:layout_width="match_parent"
        android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="Items" />

   	 <Button
        android:id="@+id/buttonStores"
          android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Choose&#10;Store" />
   	 
     
    </LinearLayout>

</RelativeLayout>