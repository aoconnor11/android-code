<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundyellow" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/morrisons_logo" />

    <LinearLayout
        android:id="@+id/linearLayoutCheckoutItems"
        android:layout_width="fill_parent"
        android:layout_height="340dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundbutton2"
        android:orientation="vertical" >
    </LinearLayout>
    


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
     android:layout_alignBottom="@+id/linearLayoutCheckoutItems"
        android:layout_alignLeft="@+id/linearLayoutCheckoutItems"
        android:layout_alignRight="@+id/linearLayoutCheckoutItems"
        android:layout_alignTop="@+id/linearLayoutCheckoutItems"  >
        
		<ListView
            android:id="@+id/listViewStores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
    </RelativeLayout>


     <LinearLayout
        android:id="@+id/linearLayoutTab"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        
          <Button
        android:id="@+id/buttonList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Shopping&#10;List" />

          <Button
              android:id="@+id/buttonItems"
              android:layout_width="match_parent"
        android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="Items" />

   	 <Button
        android:id="@+id/buttonStores"
          android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Choose&#10;Store" />
   	 
     
    </LinearLayout>

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/relativeLayout1"
         android:layout_centerHorizontal="true"
         android:text="London"
         android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>