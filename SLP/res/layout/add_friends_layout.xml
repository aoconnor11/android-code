<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  
    android:background="@drawable/background"
    >
    
<RelativeLayout   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    
    <LinearLayout
      android:id="@+id/linearLayoutSendMessage"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_alignParentRight="true"
       android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/roundbutton2"
      android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
      		android:layout_marginLeft="10dp"
            android:text="@string/findUsername"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            	android:layout_marginLeft="10dp"
            	android:layout_marginRight="10dp"
            android:background="@drawable/roundbutton2"
            android:ems="10" >

            <requestFocus />
        </EditText>

  </LinearLayout>
    
    
    
    <LinearLayout
           android:id="@+id/linearLayoutFindUsername"
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="120dp"
           android:background="@drawable/roundbutton2"
           android:orientation="vertical" >
       </LinearLayout>
    
    
       <RelativeLayout
           android:id="@+id/relativeLayout1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/linearLayoutFindUsername"
           android:layout_alignLeft="@+id/linearLayoutFindUsername"
           android:layout_alignRight="@+id/linearLayoutFindUsername"
           android:layout_alignTop="@+id/linearLayoutFindUsername" >
  

           <TextView
               android:id="@+id/textViewFindUsername"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:text="@string/find"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="#4682b4"
               android:textStyle="bold" />
       </RelativeLayout>
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       <LinearLayout
      android:id="@+id/linearLayoutSendEmail"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_alignParentRight="true"
       android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="220dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/roundbutton2"
      android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
      		android:layout_marginLeft="10dp"
            android:text="@string/findEmail"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editTextEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            	android:layout_marginLeft="10dp"
            	android:layout_marginRight="10dp"
            android:background="@drawable/roundbutton2"
            android:ems="10" >

            <requestFocus />
        </EditText>

  </LinearLayout>

       <TextView
           android:id="@+id/textViewOr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/linearLayoutSendMessage"
           android:layout_marginTop="7dp"
           android:layout_centerHorizontal="true"
           android:text="@string/or"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#ffffff"
           android:textSize="30sp" />
       
       
       
       
       
       
         
    <LinearLayout
           android:id="@+id/linearLayoutFindEmail"
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="320dp"
           android:background="@drawable/roundbutton2"
           android:orientation="vertical" >
       </LinearLayout>
       
       <RelativeLayout
           android:id="@+id/relativeLayout2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/linearLayoutFindEmail"
           android:layout_alignLeft="@+id/linearLayoutFindEmail"
           android:layout_alignRight="@+id/linearLayoutFindEmail"
           android:layout_alignTop="@+id/linearLayoutFindEmail" >
  

           <TextView
               android:id="@+id/textViewFindEmail"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:text="@string/find"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="#4682b4"
               android:textStyle="bold" />
       </RelativeLayout>
       
       
       
       
       
       
       
       
       
  
</RelativeLayout>
        

</LinearLayout>
