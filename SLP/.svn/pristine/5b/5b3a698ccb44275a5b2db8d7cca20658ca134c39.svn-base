<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayoutQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/linearLayoutQ1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="270dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundbutton3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewScoreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="185dp"
                android:layout_marginTop="13dp"
                android:paddingBottom="1.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="2.0dip"
                android:text="test test test"
                android:textColor="#000000"
                android:textSize="17sp" />
            
       
           
        </LinearLayout>

        <LinearLayout
             android:id="@+id/linearLayoutQ2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/roundbutton3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewQuestionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="185dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="0.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="0.0dip"
                    android:text="test test test"
                android:textColor="#000000"
                android:textSize="17sp" />
            
            
             <TextView
                android:id="@+id/textViewQuestionAnswerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="185dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="0.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="0.0dip"
                    android:text="A. answer"
                android:textColor="#000000"
                android:textSize="17sp" />
             <TextView
                android:id="@+id/textViewQuestionAnswerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="185dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="0.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="0.0dip"
                    android:text="B. answer"
                android:textColor="#000000"
                android:textSize="17sp" />
             
             <TextView
                android:id="@+id/textViewQuestionAnswerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="185dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="0.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="0.0dip"
                    android:text="C. answer"
                android:textColor="#000000"
                android:textSize="17sp" />
             

            <LinearLayout
                 android:id="@+id/linearLayoutQ3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="185dp"
                android:layout_marginTop="15dp" >

                <Button
                    android:id="@+id/buttonAnswerA"
                    style="@style/button_text_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_small"
                    android:text="@string/buttonA" />
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->

                <Button
                    android:id="@+id/buttonAnswerB"
                    style="@style/button_text"
                    android:layout_weight="1"
                    android:background="@drawable/button_small"
                    android:text="@string/buttonB" />
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->

                <Button
                    android:id="@+id/buttonAnswerC"
                    style="@style/button_text"
                    android:layout_weight="1"
                    android:background="@drawable/button_small"
                    android:text="@string/buttonC" />
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->

            </LinearLayout>

            <LinearLayout
                 android:id="@+id/linearLayoutQ4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="185dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relLayoutQ"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/audioIconGame"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="21dp"
                android:src="@drawable/game_audio" />

        </RelativeLayout>
    </RelativeLayout>

<!--  android:layout_alignParentBottom="true"
android:layout_alignParentTop="true"-->

    <ImageView
        android:id="@+id/avatarQuestion"
        android:layout_width="wrap_content"
        android:layout_height="200dp"      
        android:layout_alignParentRight="true"
        android:layout_marginTop="85dp"
        android:layout_marginRight="32dp"
        android:adjustViewBounds="true"
        />
 
</RelativeLayout>