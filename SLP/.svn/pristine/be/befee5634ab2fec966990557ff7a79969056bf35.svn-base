<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_weight="58.62"
        android:background="@drawable/background" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/roundbutton2"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relLayoutPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_alignTop="@+id/linearLayout1" >

            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewQuestion"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:textColor="#000000" />
            
           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="70dp"
               android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:paddingLeft="10dp"
               android:paddingRight="10dp" >

               <Button
                   android:id="@+id/buttonAnswerA"
                   style="@style/button_text"
                   android:layout_weight="1"
                   android:background="@drawable/button_small"
                   android:text="@string/buttonA" />

            <Button
                android:id="@+id/buttonAnswerB"
                android:background="@drawable/button_small" 
                style="@style/button_text"
                android:text="@string/buttonB"
                android:layout_weight="1" />

                
            
            <Button
                android:id="@+id/buttonAnswerC"
                android:background="@drawable/button_small" 
                style="@style/button_text"
                android:text="@string/buttonC"
                android:layout_weight="1" />

           
            </LinearLayout> 
                
            
            
            
