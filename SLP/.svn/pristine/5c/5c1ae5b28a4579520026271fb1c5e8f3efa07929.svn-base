<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/background" >

       <LinearLayout
           android:id="@+id/linearLayoutTryPurchase"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:layout_marginBottom="230dp"
           android:layout_marginLeft="50dp"
           android:layout_marginRight="50dp"
           android:layout_marginTop="230dp"
           android:background="@drawable/roundbutton2"
           android:orientation="vertical" >
       </LinearLayout>

       <RelativeLayout
           android:id="@+id/relativeLayout1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/linearLayoutTryPurchase"
           android:layout_alignLeft="@+id/linearLayoutTryPurchase"
           android:layout_alignRight="@+id/linearLayoutTryPurchase"
           android:layout_alignTop="@+id/linearLayoutTryPurchase" >

           <TextView
               android:id="@+id/textViewTryPurchase"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:text="@string/tryPurchase"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="#4682b4"
               android:textStyle="bold" />
       </RelativeLayout>

       <TextView
           android:id="@+id/textViewPurchaseMade"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@+id/relativeLayout1"
           android:layout_alignLeft="@+id/linearLayoutTryPurchase"
           android:layout_marginBottom="25dp"
           android:text="@string/thanksPurchase"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#ffffff"
           android:textStyle="bold" />

   </RelativeLayout>

</LinearLayout>